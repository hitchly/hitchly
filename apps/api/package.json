{
  "name": "@hitchly/api",
  "private": true,
  "version": "1.0.0",
  "description": "Hitchly api server with Express, tRPC, and Drizzle ORM",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./router": "./router.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio --host 127.0.0.1"
  },
  "dependencies": {
    "@trpc/server": "^11.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@trpc/client": "^11.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "ts-node-dev": "^2.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  }
}
