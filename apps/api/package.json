{
  "name": "hitchly-backend",
  "version": "1.0.0",
  "description": "Hitchly backend server with Express, tRPC, and Drizzle ORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio --host 127.0.0.1"
  },
  "dependencies": {
    "@trpc/server": "^11.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@trpc/client": "^11.5.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.10.2",
    "drizzle-kit": "^0.19.13",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.13.4",
    "typescript": "^5.2.2"
  }
}
