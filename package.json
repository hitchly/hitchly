{
  "name": "hitchly",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky",
    "type-check": "turbo run type-check",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@hitchly/eslint-config": "workspace:*",
    "@hitchly/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/react": "~19.1.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript-eslint": "^8.46.3",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,css}": [
      "prettier --write"
    ],
    "*.tex": [
      "bash scripts/check-latex.sh"
    ]
  },
  "dependencies": {
    "expo": "~54.0.32",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
